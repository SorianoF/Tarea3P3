@model IEnumerable<GestorPacientes.Models.PacienteViewModel>

@{
    ViewData["Title"] = "Pacientes";
}

<h1>Listado de Pacientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo Paciente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paciente in Model)
        {
            <tr>
                <td>@paciente.FirstName</td>
                <td>@paciente.LastName</td>
                <td>@paciente.PhoneNumber</td>
                <td>@paciente.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@paciente.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@paciente.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>