@model GestorPacientes.Models.CitaViewModel

@{
    ViewData["Title"] = "Crear Cita";
}

<h2>Crear Cita</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="PacienteId">Paciente</label>
        <select name="PacienteId" class="form-control">
            <option value="">Seleccione un paciente...</option>
            <option value="1">Paciente 1</option>
            <option value="2">Paciente 2</option>
            <option value="3">Paciente 3</option>
            <option value="4">Paciente 4</option>
            <option value="5">Paciente 5</option>
            <option value="6">Paciente 6</option>
            <!-- Agregar más opciones de pacientes según sea necesario -->
        </select>
        <span asp-validation-for="PacienteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="MedicoId">Médico</label>
        <select name="MedicoId" class="form-control">
            <option value="">Seleccione un médico...</option>
            <option value="1">Médico 1</option>
            <option value="2">Médico 2</option>
            <option value="3">Médico 3</option>
            <option value="4">Médico 4</option>
            <option value="5">Médico 5</option>
            <option value="6">Médico 6</option>
            <!-- Agregar más opciones de médicos según sea necesario -->
        </select>
        <span asp-validation-for="MedicoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="FechaCita">Fecha de la Cita</label>
        <input name="FechaCita" type="date" class="form-control" />
        <span asp-validation-for="Birthdate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="HoraCita">Hora de la Cita</label>
        <input name="HoraCita" type="time" class="form-control" />
        <span asp-validation-for="HoraCita" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
